<!-- notes will be posted here -->
<h2>COMMENTSSSSSSSS</h2>
<div class="comment">
<% comment.forEach(element => { %>
<li><%= element.comment %></li>
<% }) %>
</div>

<!-- text area to add notes -->
<form action="/user/nominees/comment" method="POST">
<div class="form-group">
    <label for="comment">Add Your Personal Notes Here</label>
    <input type="text" class="form-control" id="comment" name="comment" required>

    <div class="form-group">
    <input type="hidden" class="form-control" id="userId" name="userId" value="<%= user.id %>">
    </div>

    <div class="form-group">
    <input type="hidden" class="form-control" id="nomineeId" name="nomineeId" value="<%= nominee.id %>">
    </div>

    <div class="form-group">
    <input type="hidden" class="form-control" id="email" name="email" value="<%= user.email %>">
    </div>
</div>
<input type="submit" class="btn btn-primary">
</form>

