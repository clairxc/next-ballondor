<% leagueTeams.forEach(team => { %>
    <div class="card">
        <img id="team-logos" src="<%= team.badge %>" alt="<%= team.name %>" width="180" height="180">
        <div class="card-body">
          <h3 class="card-title"><%= team.name %></h3>
        <!-- make team description collapsable -->
          <p>
            <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseText" role="button" aria-expanded="false" aria-controls="collapseText">
              View Team Details
            </a>
          </p>
          <div class="collapse" id="collapseText">
            <div class="card card-body">
              <%= team.description %>
            </div>
          </div>

          <a href="/players/<%= team.name %>" class="btn btn-primary">View All Players in Team</a>
        </div>
    </div>
<% }) %>

